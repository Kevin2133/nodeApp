<link rel="stylesheet" href="css/style.css">
<link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">


<div class="introduzione">
    <nav class="main-nav">
        <a href="/"><h3 class="logo"><span class="span-logo">#sm</span>ile</h3></a>      
    </nav>

    <h2 class="login-header"><%= pagename %></h2>

    <div class="login-wrapper">
        <div class="card login">
            <div class="login-form">
                
                <%- include(pagename.toLowerCase() + "-username-item"); %>

                <%- include(pagename.toLowerCase() + "-password-item"); %>

                <% if(pagename.toLowerCase() === "sign-up"){%>
                    <%- include("sign-up-password-control-item"); %>
                <% } %>

                <div class="login-item">
                    <button class="btn login-btn"><%= pagename %></button>
                </div>
                <h5><%= description%></h5> <a href=<%= redirect_path %>><%= redirect_name %></a>
            </div>            
        </div>
    </div>
    
    
</div>

<script>
    const loginBtn = document.querySelector("button.login-btn");
    const inputs = document.querySelectorAll("div.login-item > input");

    for(var item of inputs){
        item.addEventListener("keypress", (event) => {
            if(event.key === "Enter"){
                event.preventDefault();

                loginBtn.click();
            }
        });
    }

    
</script>